{
    "compilerOptions": {
      "target": "ES2020",                // Latest JS features
      "module": "commonjs",               // Node.js-style modules
      "strict": true,                     // Enable strict type checking
      "esModuleInterop": true,            // Allow importing commonjs modules
      "skipLibCheck": true,               // Skips checking library types
      "forceConsistentCasingInFileNames": true, // Case-sensitive file names
      "outDir": "./dist",                 // Output directory for compiled JS files
      "rootDir": "./src",                 // Root directory of TypeScript files
      "types": ["node"]                   // Use Node.js types
    },
    "include": ["src/**/*.ts"],           // Include all .ts files in the src directory
    "exclude": ["node_modules"]           // Exclude node_modules from being compiled
  }
  